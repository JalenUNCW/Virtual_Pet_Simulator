<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.image.Image?>

<GridPane hgap="10.0" stylesheets="@styles/styles.css" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" style="-fx-background-color: #d9b99b;" vgap="-100.0" xmlns="http://javafx.com/javafx/22.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.vp_simulator.gameScreenController">
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" maxWidth="200" minWidth="10.0" prefWidth="119.33333079020181" />
        <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="10.0" prefWidth="481.0000025431316" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="50.0"  vgrow="ALWAYS" />
        <RowConstraints maxHeight="100.0" prefHeight="100.0" vgrow="ALWAYS" />
    </rowConstraints>
    <children>
        <!-- AnchorPane with background and pet images -->
        <AnchorPane fx:id="imageAnchor" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1">
            <children>
                <!-- Background Image -->
                <ImageView fx:id="backgroundImage" pickOnBounds="true" preserveRatio="false">
                    <image>
                        <Image url="@images/home.jpg" />
                    </image>
                </ImageView>
                <!-- Pet Image -->
                <ImageView fx:id="petImage" fitHeight="150.0" fitWidth="200.0" layoutX="141.0" layoutY="74.0" pickOnBounds="true" preserveRatio="true" />
            </children>
        </AnchorPane>

        <!-- UI Elements: ProgressBars and Labels -->
        <GridPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.valignment="BOTTOM">
            <columnConstraints>
                <ColumnConstraints minWidth="150" prefWidth="200" hgrow="SOMETIMES" />
                <ColumnConstraints minWidth="400" prefWidth="600" hgrow="ALWAYS" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="30.0" prefHeight="50.0" vgrow="ALWAYS" />
                <RowConstraints minHeight="30.0" prefHeight="50.0" vgrow="ALWAYS" />
                <RowConstraints minHeight="30.0" prefHeight="50.0" vgrow="ALWAYS" />
                <RowConstraints minHeight="30.0" prefHeight="50.0" vgrow="ALWAYS" />
            </rowConstraints>
            <children>
                <!-- Health -->
                <Label text="Health" styleClass="gslabel" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <ProgressBar fx:id="healthBar" maxWidth="1.7976931348623157E308" prefHeight="50.0" progress="1.0" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                <!-- Hunger -->
                <Label text="Hunger" styleClass="gslabel" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <ProgressBar fx:id="hungerBar" maxWidth="1.7976931348623157E308" prefHeight="50.0" progress="1.0" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                <!-- Energy -->
                <Label text="Energy" styleClass="gslabel" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <ProgressBar fx:id="energyBar" maxWidth="1.7976931348623157E308" prefHeight="50.0" progress="1.0" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                <!-- Happiness -->
                <Label text="Happiness" styleClass="gslabel" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                <ProgressBar fx:id="happinessBar" maxWidth="1.7976931348623157E308" prefHeight="50.0" progress="1.0" GridPane.rowIndex="3" GridPane.columnIndex="1" />
            </children>
            <GridPane.margin>
                <Insets bottom="10.0" right="5.0" />
            </GridPane.margin>
        </GridPane>

        <!-- Buttons -->
        <GridPane GridPane.valignment="TOP">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
                <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="ALWAYS" />
                <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="ALWAYS" />
            </rowConstraints>
            <children>
                <Button fx:id="feedButton" styleClass="button" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#feedPressed" text="Feed" />
                <Button fx:id="vetButton" styleClass="button" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#vetPressed" text="Go to Vet" GridPane.rowIndex="4">
                    <GridPane.margin>
                        <Insets />
                    </GridPane.margin></Button>
                <Button fx:id="trainButton" styleClass="button" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#trainPressed" text="Train" GridPane.rowIndex="3" />
                <ToggleButton fx:id="walkToggle" styleClass="button" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#walkPressed" text="Walk" GridPane.rowIndex="1" />
                <ToggleButton fx:id="playToggle" styleClass="button" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#playPressed" text="Play" GridPane.rowIndex="2" />
            </children>
        </GridPane>

        <GridPane GridPane.rowIndex="1" GridPane.valignment="BOTTOM">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Button fx:id="menuButton" styleClass="button" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#menuPressed" text="Main Menu" />
                <Button fx:id="achievementButton" styleClass="button" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#achievementPressed" text="Achievements" GridPane.rowIndex="1" />
            </children>
        </GridPane>
    </children>
</GridPane>

