<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>

<?import java.net.URL?>
<AnchorPane xmlns="http://javafx.com/javafx/22.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.vp_simulator.CharacterSelectController" fx:id="anchorPane" stylesheets="@styles/styles.css">

   <children>
      <!-- Background -->
      <ImageView fx:id="characterselectimage" styleClass="characterselect" fitHeight="400.0" fitWidth="600.0" preserveRatio="false">
         <image>
            <Image url="@images/characterselect2-background.jpg" />
         </image>
      </ImageView>

      <!-- Character Selection VBox for centering the content -->
      <VBox fx:id="vbox" styleClass="vbox" alignment="CENTER" spacing="200">
         <!-- HBox to align images side by side -->
         <HBox fx:id="imageHBox" alignment="CENTER" spacing="200">
            <!-- Dog Image and Button -->
            <StackPane fx:id="dogPane" styleClass="dogPane" alignment="CENTER">
               <children>
                  <!-- VBox to align Image and Button vertically -->
                  <VBox alignment="CENTER" spacing="100">
                     <ImageView fx:id="dogImageView" fitHeight="400.0" fitWidth="400.0">
                        <image>
                           <Image url="@images/cutedog.jpg" />
                        </image>
                     </ImageView>
                     <Button fx:id="dogButton" onAction="#handleDogButtonAction" text="DOG" stylesheets="@styles/styles.css" styleClass="dogButton" />
                  </VBox>
               </children>
            </StackPane>

            <!-- Cat Image and Button -->
            <StackPane fx:id="catPane" styleClass="catPane" alignment="CENTER">
               <children>
                  <!-- VBox to align Image and Button vertically -->
                  <VBox alignment="CENTER" spacing="100">
                     <ImageView fx:id="catImageView" fitHeight="400.0" fitWidth="400.0">
                        <image>
                           <Image url="@images/cutecat.png" />
                        </image>
                     </ImageView>
                     <Button fx:id="catButton" onAction="#handleCatButtonAction" text="CAT" stylesheets="@styles/styles.css" styleClass="catButton" />
                  </VBox>
               </children>
            </StackPane>
         </HBox>
      </VBox>
   </children>
</AnchorPane>





