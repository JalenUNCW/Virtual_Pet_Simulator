<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="CENTER" hgap="20.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="400.0" prefWidth="600.0" styleClass="grid-pane" stylesheets="@styles/settingsStyle.css" vgap="5.0" xmlns="http://javafx.com/javafx/22.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.vp_simulator.SettingsController">
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" maxWidth="325.0" minWidth="270.0" prefWidth="279.0" />
        <ColumnConstraints hgrow="ALWAYS" maxWidth="280.0" minWidth="225.0" prefWidth="271.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="101.0" minHeight="34.0" prefHeight="34.0" vgrow="NEVER" />
        <RowConstraints maxHeight="110.0" minHeight="0.0" prefHeight="91.0" vgrow="NEVER" />
        <RowConstraints maxHeight="151.0" minHeight="29.0" prefHeight="48.0" vgrow="ALWAYS" />
      <RowConstraints maxHeight="172.0" minHeight="106.0" prefHeight="172.0" />
    </rowConstraints>
    <children>
        <!-- Label -->
        <Label fx:id="volumeLabel" styleClass="label" text="Volume" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" />

        <!-- Slider -->
        <Slider fx:id="volumeSlider" showTickLabels="true" showTickMarks="true"
                snapToTicks="true" value="50.0" min="0" max="100"
                majorTickUnit="25" minorTickCount="4" blockIncrement="10"
                GridPane.columnSpan="2" GridPane.rowIndex="1">
         <GridPane.margin>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </GridPane.margin>
        </Slider>

        <!-- Hardcore Mode Toggle -->
        <ToggleButton fx:id="hardcoreModeToggle" onAction="#handleToggleMusic" prefHeight="90.0" prefWidth="358.0" styleClass="toggle-button" text="HARDCORE MODE" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="2" />

        <!-- Main Menu Button -->
        <Button fx:id="mainmenuSettingsButton" onAction="#mainmenuSettingsButton" styleClass="button" text="Main Menu" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
    </children>
</GridPane>
