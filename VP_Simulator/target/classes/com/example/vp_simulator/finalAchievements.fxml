<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<HBox fx:id="hbox" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/22.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.vp_simulator.AchievementController" stylesheets="@styles/achievementStyle.css">
    <children>
        <GridPane prefHeight="400.0" prefWidth="504.0">
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" />
                <ColumnConstraints hgrow="SOMETIMES" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <!-- Header GridPane -->
                <GridPane fx:id="headerGridPane" maxHeight="-Infinity" prefHeight="48.0" prefWidth="504.0" GridPane.rowIndex="0">
                    <columnConstraints>
                        <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Name" GridPane.columnIndex="0">
                            <GridPane.margin>
                                <Insets left="10.0" />
                            </GridPane.margin>
                        </Label>
                        <Label text="Description" GridPane.columnIndex="1">
                            <GridPane.margin>
                                <Insets left="10.0" />
                            </GridPane.margin>
                        </Label>
                    </children>
                </GridPane>

                <!-- Achievements GridPane -->
                <GridPane fx:id="achievementGridPane" GridPane.rowIndex="1" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
                    <columnConstraints>
                        <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" minWidth="10.0" />
                        <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <!-- Labels -->
                        <Label text="Dog Days" GridPane.rowIndex="0" />
                        <Label text="Training Day" GridPane.rowIndex="1" />
                        <Label text="Bathroom Break" GridPane.rowIndex="2" />
                        <Label text="First Walk" GridPane.rowIndex="3" />
                        <Label text="Night Night" GridPane.rowIndex="4" />
                        <Label text="Hunger Games" GridPane.rowIndex="5" />
                        <Label text="Vet Visit" GridPane.rowIndex="6" />

                        <!-- Text Areas -->
                        <TextArea editable="false" prefHeight="30.0" prefWidth="200.0" text="You walked your pet for the 1st time" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <TextArea editable="false" prefHeight="30.0" prefWidth="200.0" text="Put your pet to sleep for the 1st time" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <TextArea editable="false" prefHeight="30.0" prefWidth="200.0" text="Feed your pet for the 1st time" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <TextArea editable="false" prefHeight="30.0" prefWidth="200.0" text="Your pet had their 1st birthday" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <TextArea editable="false" prefHeight="30.0" prefWidth="200.0" text="1st time training your pet" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        <TextArea editable="false" prefHeight="30.0" prefWidth="200.0" text="1st time taking your pet out" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                        <TextArea editable="false" prefHeight="30.0" prefWidth="200.0" text="1st time taking your pet to the vet" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                    </children>
                </GridPane>
            </children>
        </GridPane>
    </children>
</HBox>
